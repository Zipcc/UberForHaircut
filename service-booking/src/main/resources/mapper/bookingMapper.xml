<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bristol.project.dao.BookingDao">

    <insert id="" parameterType="Appointment" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, password) values(#{username},#{password});
    </insert>

    <delete id="deleteAppointmentById">
        delete from appointment
        where id=#{id};
    </delete>
    
    <select id="getAppointmentById" resultType="Appointment">
        select * from appointment
        where id=#{id} and length(id)=length(#{id});
    </select>

    <select id="getAllAppointment" resultType="Appointment">
        select * from appointment;
    </select>

</mapper>